<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Instrucciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        >

        <Button
            android:id="@+id/BInfoCRUD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="InfoCRUD"
            android:text="@string/InfoCrudPrueba"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/BInfoResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="InfoResultados"
            android:text="@string/InfoVerResultados"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>